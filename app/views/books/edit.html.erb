<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

<div class="field">
<%= f.label :Title %><br>
<%= f.text_field :title %>
</div>

<div class="field">
<%= f.label :Body %><br>
<%= f.text_area :body %>
</div>

<div class="actions">
<%= f.submit 'Update Book' %>
</div>

<% end %>

<div class="parent">
 <div><%= link_to "Show", book_path(@book.id) %></div>
 <div class="child">|</div>
 <div><%= link_to "Back", books_path %></div>
</div>